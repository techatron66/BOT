<?xml version="1.0"?>
<launch>

  <!-- Launch Gazebo with robot -->
  <include file="$(find articubot_one)/launch/gazebo_full.launch"/>

  <!-- Launch Gmapping SLAM -->
  <include file="$(find articubot_one)/launch/slam_gmapping.launch"/>

  <!-- Move Base for autonomous navigation -->
  <include file="$(find articubot_one)/launch/move_base.launch"/>

  <!-- Explore Lite for autonomous exploration -->
  <node pkg="explore_lite" type="explore" respawn="false" name="explore" output="screen">
    <param name="robot_base_frame" value="base_link"/>
    <param name="costmap_topic" value="map"/>
    <param name="costmap_updates_topic" value="map_updates"/>
    <param name="visualize" value="true"/>
    <param name="planner_frequency" value="0.33"/>
    <param name="progress_timeout" value="30.0"/>
    <param name="potential_scale" value="3.0"/>
    <param name="orientation_scale" value="0.0"/>
    <param name="gain_scale" value="1.0"/>
    <param name="transform_tolerance" value="0.3"/>
    <param name="min_frontier_size" value="0.75"/>
  </node>

  <!-- RViz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find articubot_one)/rviz/mapping.rviz" required="false"/>

</launch>