<?xml version="1.0"?>
<launch>

  <!-- Arguments -->
  <arg name="map_file" default="$(find articubot_one)/maps/my_map.yaml"/>

  <!-- Launch Gazebo with robot -->
  <include file="$(find articubot_one)/launch/gazebo_full.launch"/>

  <!-- Map Server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)">
    <param name="frame_id" value="map"/>
  </node>

  <!-- AMCL Localization -->
  <include file="$(find articubot_one)/launch/amcl.launch"/>

  <!-- Move Base -->
  <include file="$(find articubot_one)/launch/move_base.launch"/>

  <!-- RViz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find articubot_one)/rviz/navigation.rviz" required="false"/>

</launch>